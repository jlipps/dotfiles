{
  "java.completion.enabled": true,
  "java.configuration.updateBuildConfiguration": "always",
  "java.import.gradle.enabled": true,
  "java.autobuild.enabled": false,
  "java.project.referencedLibraries": "~/.gradle/caches/**",
  "java.maven.downloadSources": true,
  "tsserver.enableJavascript": true,
  "tsserver.npm": "~/.nvm/versions/node/v16.13.1/bin",  
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E501,E731"],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", ".ccls-root", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": ".ccls-cache"
         },
         "clang": {
           "resourceDir": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr",
           "extraArgs": [
             "-isystem",
             "/usr/local/include",
             "-isystem",
             "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1",
             "-isystem",
             "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include",
             "-isystem",
             "/Applications/Xcode.app/Contents/Developer/Platforms/iPhoneOS.platform/Developer/SDKs/iPhoneOS.sdk/usr/include/"        
           ]
         }
       }
    }
  }
}
